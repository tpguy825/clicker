{
	"compilerOptions": {
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2020",
		"jsx": "react",
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/node_modules/*"]
}
